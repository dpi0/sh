#!/usr/bin/env bash

LICENSE_URL="https://bin.dpi0.cloud/license"

# Initialize git repository if not already initialized
if [ ! -d .git ]; then
  git init
  echo "ğŸŸ¢ Initialized git repository"
else
  echo "ğŸŸ¨ Git repository already exists"
fi

# Download license file if doesn't exist
if [ ! -f LICENSE ]; then
  if curl -fsSL ${LICENSE_URL} -o LICENSE; then
    echo "ğŸŸ¢ Downloaded LICENSE file"
  else
    echo "âŒ Failed to download LICENSE file"
  fi
else
  echo "ğŸŸ¨ LICENSE file already exists"
fi

# Create README.md if it doesn't exist
if [ ! -f README.md ]; then
  echo -e "# Project Title\n\nA brief description of the project." > README.md
  echo "ğŸŸ¢ Created README.md"
else
  echo "ğŸŸ¨ README.md already exists"
fi

echo "ğŸ‰ Project setup complete"
