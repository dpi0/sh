#!/usr/bin/env bash

usage() {
  echo ""
  echo "‚ùî Copy the contents of a file to the clipboard."
  echo ""
  echo "‚ÑπÔ∏è Usage: copy <file>"
  echo ""
  echo "üîπ Examples:"
  echo "  copy /path/to/file"
}

FILE="$1"
if [[ -z "$FILE" ]]; then
  echo "‚ùå Error: No file specified"
  usage
  exit 1
fi

if [[ ! -f "$FILE" ]]; then
  echo "‚ùå Error: '$FILE' is not a regular file"
  usage
  exit 1
fi

if [[ ! -r "$FILE" ]]; then
  echo "‚ùå Error: Cannot read file '$FILE'"
  usage
  exit 1
fi

content=$(<"$FILE")

if command -v wl-copy &>/dev/null; then
  echo "$content" | wl-copy
  echo "‚ú® Copied contents of '$FILE' to clipboard using wl-copy"
elif command -v xclip &>/dev/null; then
  echo "$content" | xclip -selection clipboard
  echo "‚ú® Copied contents of '$FILE' to clipboard using xclip"
elif command -v pbcopy &>/dev/null; then
  echo "$content" | pbcopy
  echo "‚ú® Copied contents of '$FILE' to clipboard using pbcopy"
elif command -v clip.exe &>/dev/null; then
  echo "$content" | clip.exe
  echo "‚ú® Copied contents of '$FILE' to clipboard using clip.exe"
elif command -v clip &>/dev/null; then
  echo "$content" | clip
  echo "‚ú® Copied contents of '$FILE' to clipboard using clip"
else
  echo "‚ùå No clipboard utility found"
  exit 1
fi
