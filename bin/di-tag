#!/usr/bin/env bash

if [ "$#" -eq 0 ]; then
  echo "ğŸŸ¡ No argument given. Exiting..."
  echo "Usage: di-tag IMAGE_NAME"
  echo "Example: di-tag nginx"
  exit 1
fi

if ! command -v regctl &>/dev/null; then
  echo "âŒ ERROR: 'regctl' not installed. Exiting..."
  exit 1
fi

echo "ğŸ”¹ Running: regctl tag ls '$1' | sort -V -r | bat"

regctl tag ls "$1" | sort -V -r | bat
